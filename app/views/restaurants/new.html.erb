<h1>Create a new Restaurant</h1>

<%= simple_form_for(@restaurant) do |f| %>
<%= f.input :name %>
<%= f.input :address %>
<%= f.input :phone_number %>
<%= f.input :category, as: :radio_buttons, collection: Restaurant::CATEGORIES %>
<%= f.button :submit %>
<% end %>
<%= link_to "Go back to all restaurants", restaurants_path %>
